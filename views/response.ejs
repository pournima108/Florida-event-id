            console.log(str1)
            // var empid = "<%= details.employeeid%>"
            var result =str1.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();});
      //  return match.toUpperCase();
            console.log(result)
            $('#message').html( result )
    
        }  
  </script>
